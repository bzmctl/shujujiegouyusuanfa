#ifndef STUDENTAIDRECORD_H
#define STUDENTAIDRECORD_H

#include <string>
#include <iostream>
#include "FinancialAidAward.h"
/**
  * class StudentAidRecord
  * 学生相关信息
  */

class StudentAidRecord
{
public:

  // Constructors/Destructors
  //  


  /**
   * Empty Constructor
   */
  StudentAidRecord ( );

  /**
   * Empty Destructor
   */
  virtual ~StudentAidRecord ( );

  // Static Public attributes
  //  

  // Public attributes
  //  



  /**
   * @return int
   */
  int getId ( );


  /**
   * @return string
   */
  string getName ( );


  /**
   * @return int
   */
  int getNumAwards ( );


  /**
   * @return FinancialAidAward
   * @param  i 奖项编号
   */
  FinancialAidAward getFinancialAid (int i );


  /**
   * @param  N 学生名称
   */
  void setName (string N );


  /**
   * @param  I 奖学金数量
   */
  void setNumAwards (int I );


  /**
   */
  void display ( );


  /**
   * @param  i 奖学金项数
   * @param  F 财政补助奖金
   */
  void setFinanciaAid (int i, FinancialAidAward F );


  /**
   * @param  id
   * @param  name
   * @param  numAwards
   * @param  finAid
   */
   StudentAidRecord (int id, string name, int numAwards, FinancialAidAward[] finAid );

private:

  // Static Private attributes
  //  

  // Private attributes
  //  

  int id;
  string name;
  int numAwards;
  FinancialAidAward[] finAid;

private:


  void initAttributes ( ) ;

};

#endif // STUDENTAIDRECORD_H
